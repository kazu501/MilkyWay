<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">作品投稿</h1>
    <%= form_tag("/posts/create",{multipart:true}) do %>
    <div class="form">
      <div class="form-body">
        <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
           <%# <%= form_tag("/posts/#{@post.id}/create",{multipart: true} do )%>
          <p>画像ファイル埋め込み</p>
         <input name="picture" type="file">
         <textarea name="title" placeholder="タイトル"></textarea>
         <textarea name="content" placeholder="キャプション"></textarea>
         <input type="submit" value="投稿する">
      </div>
    </div>
    <% end %>
  </div>
</div>
